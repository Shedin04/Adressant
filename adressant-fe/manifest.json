{
  "name": "Adressant",
  "version": "2.0",
  "manifest_version": 3,
  "description": "Analyze email domains, headers, and detect malicious content.",
  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "128": "icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon32.png",
    "pages": [
      "headers.html",
      "policy.html"
    ]
  },
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "contextMenus"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": [
        "content.js"
      ]
    }
  ],
  "host_permissions": [
    "https://adressant.azurewebsites.net/*"
  ]
}